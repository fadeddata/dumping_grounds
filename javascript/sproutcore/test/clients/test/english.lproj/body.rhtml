<% content_for('body') do %>
<div class="sc-welcome">
  <img class="logo" src="<%= static_url('images/sproutcore-logo') %>" />
  <div class="message">
    <%= checkbox_view :clock_checkbox, :label => "Show Clock", :bind => { :value => "Test.appController.isClockShowing" } %>
    <%= label_view :my_label, :tag => 'h1', :bind => { :value => 'Test.appController.greeting' } %>
  </div>
</div>
<% end %>
