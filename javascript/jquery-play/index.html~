<script src="jquery-1.2.3.pack.js" type="text/javascript"></script>
<script src="ui.tabs.pack.js" type="text/javascript"></script>
<script src="jquery.curvycorners.packed.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function(){
			
			$('.inner').corner({
			  tl: { radius: 6 },
			  tr: { radius: 6 },
			  bl: { radius: 6 },
			  br: { radius: 6 }});
			$('.c').corner();
			$('.c2').corner({
			  tl: { radius: 32 },
			  tr: { radius: 16 },
			  bl: { radius: 16 },
			  br: { radius: 16 },
			  antiAlias: true,
			  autoPad: true,
			  validTags: ["div"] });
			$('.c3').corner({
			  tl: { radius: 16 },
			  tr: false,
			  bl: false,
			  br: { radius: 16 },
			  antiAlias: true,
			  autoPad: true,
			  validTags: ["div"] });
			  
			$('#container-1 > ul').tabs();
	});
</script>
<link rel="stylesheet" href="ui.tabs.css" type="text/css" media="print, projection, screen">
<style type="text/css">
div, p {
	margin:0;
	padding:0;
}
.container {
	margin:0 auto;
	border:0;
	padding:32px;
	text-align:center
}
.hoverme:hover .hasBackgroundColor {
	background-color:#333 !important;
}
</style>

